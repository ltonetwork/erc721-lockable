{
  "main": "truffle.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "scripts/test.sh",
    "migrate": "truffle migrate --compile-all --network mainnet",
    "migrate:dev": "truffle migrate --compile-all --network development",
    "migrate:goerli": "truffle migrate --compile-all --network goerli",
    "verify": "truffle run verify LockableNFT --network mainnet",
    "verify:goerli": "truffle run verify LockableNFT --network goerli",
    "deploy": "npm run migrate && npm run verify",
    "deploy:goerli": "npm run migrate:goerli && npm run verify:goerli"
  },
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^4.4.0"
  },
  "devDependencies": {
    "@gnosis.pm/mock-contract": "github:gnosis/mock-contract#master",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@truffle/hdwallet-provider": "^2.0.0",
    "dotenv": "^10.0.0",
    "ganache-cli": "^6.12.2",
    "mocha": "^9.1.3",
    "mockjs": "^1.1.0",
    "truffle": "^5.4.26",
    "truffle-assertions": "^0.9.2",
    "truffle-plugin-verify": "^0.5.20"
  }
}
